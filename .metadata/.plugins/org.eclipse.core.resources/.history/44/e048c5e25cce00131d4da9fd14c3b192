var imageFolder = Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory, "Images");
var imageFile = imageFolder.getDirectoryListing();


var pWidth = Ti.Platform.displayCaps.platformWidth;
var pHeight = Ti.Platform.displayCaps.platformheight;
var rowCount = 4;
var margin = 10;
var canvas = pWidth*pHeight;
var size = (pWidth - margin*3/3);

var makeGallery = function(){
	for(var i=0; i<imageFile; i++){
		var view = Ti.UI.createView({
		backgroundColor: "#fff",
		top: margin,
		left: margin,
		width: size,
		height: size,
	});

}};


var galButton = Ti.UI.createView({
	title: "Main Menu",
	backgroundColor: "23ba00",
	height: 50,
	bottom: 0,
});


var galButtonText = Ti.UI.createLabel({
	text: "Gallery",
	color:"#fff",
	font: {fontSize: 12, fontFamily: "Arial", fontWeight: "bold"},
	textAlign: "center"
});

galButton.add(galButtonText);
navWindow.add(galButton, view);












galButton.addEventListener("click", makeGallery);