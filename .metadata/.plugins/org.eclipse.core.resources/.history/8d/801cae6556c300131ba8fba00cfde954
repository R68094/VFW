var mainWindow = Ti.UI.createWindow({
	title: "Weapons of War",
	backgroundColor: "gray"
});

var navWindow = Ti.UI.iOS.createNavigationWindow({
	window: mainWindow
});

var weaponSections = Ti.UI.createTableViewSection({
	headerTitle: "Warriors and Rogues",
	footerTitle: "Melee Fighters"
});

for (i=0, j=weapons.weaponList.name.length; i<j; i++){
	var theRow = Ti.UI.createTableViewRow({
		title: weapons.weaponList[i].name,
		font: {fontSize: 14, fontFamily: "arial"},
		info: weapons.weaponList[i].description,
		hasChild: true,
		color: "blue"
	});
	weaponSections.add(theRow);
	theRow.addEventListener("click", getSpecs);
}

var loadFile = require ("weapons");

makeTable();
navWindow.open();